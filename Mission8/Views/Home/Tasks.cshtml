@{ ViewData["Title"] = "Task List"; }


@model List<TaskResponse>

<div class="container">
    <h2 class="my-4 text-center">Movie List</h2>

    <table class="table table-bordered table-striped">

        <thead class="thead-dark">
            <tr>
                <th>Task</th>
                <th>Due Date</th>
                <th>Quadrant</th>
                <th>Category</th>
                <th>Completed</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var x in Model)
            {
<tr>
    <td>@x.Task</td>
    <td>@x.DueDate</td>
    <td>@x.Quadrant.QuadrantName</td>
    <td>@x.Category</td>
    <td>@x.Completed</td>


    <td><a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.TaskId">Edit</a></td>
    <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.TaskId">Delete</a></td>
</tr>            }
        </tbody>

    </table>
</div>
